# === CONFIGURACIÓN DE ENTORNO ===
DEBUG=False
DJANGO_SECRET_KEY=change-this-secret-key-in-production
DJANGO_ENV=production

# === BASE DE DATOS ===
# Para producción usar PostgreSQL o MySQL
DATABASE_URL=postgresql://username:password@localhost:5432/loslirios_prod
DB_NAME=loslirios_prod
DB_USER=your-db-user
DB_PASSWORD=your-secure-db-password
DB_HOST=localhost
DB_PORT=5432

# === SEGURIDAD ===
ALLOWED_HOSTS=your-domain.com,www.your-domain.com
SECRET_KEY=generate-a-new-secret-key-for-production
SECURE_SSL_REDIRECT=True

# === EMAIL ===
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@losliriossa.com

# === ADMINISTRACIÓN ===
ADMIN_EMAIL=admin@losliriossa.com

# === CACHE Y PERFORMANCE ===
REDIS_URL=redis://127.0.0.1:6379/1
LOG_LEVEL=WARNING
PAGINATION_SIZE=25
MAX_PAGINATION_SIZE=100
SESSION_COOKIE_AGE=3600

# === ARCHIVOS ESTÁTICOS ===
STATIC_ROOT=staticfiles
MEDIA_ROOT=media